= simple_form_for @feedback, html: { class: "form-vertical" } do |f|
  .row
    .span6
      .alert.alert-info
        = t("feedback.additional_info")

      = f.input :image, as: :file, label: t("feedback.image")
      = f.input :website_url, input_html: { class: "span6" }, label: t("feedback.website_url")

      .form-group
        .form-actions
          = f.submit class: "btn btn-default btn-primary"

    .span6
      = render "extra_info"